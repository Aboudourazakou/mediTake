<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.AddPill"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/add_title"

            android:background="@color/main_blue"
            android:orientation="horizontal"
            android:gravity="center">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Ajouter les medicaments"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textColor="@color/main_blue"
                android:text="Nom du medicamment">

            </TextView>
            <EditText
                android:id="@+id/nomm_med"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textColor="@color/main_blue"
                android:text="Categorie">

            </TextView>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/categoriePill"

                />


        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textColor="@color/main_blue"
                android:text="Quantite">

            </TextView>
            <EditText
                android:id="@+id/qtePill"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_height="60dp"/>

        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textColor="@color/main_blue"
                android:text="Seuil de renouvelement">

            </TextView>
            <EditText
                android:id="@+id/seuilRenouvelement"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_height="60dp"/>

        </LinearLayout>


        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/uploadPictureBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/upload_picture"
                android:textColor="@color/main_blue"
                >

            </TextView>

            <ImageView
                android:visibility="gone"
                android:id="@+id/uploadedPicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:src="@drawable/logo">

            </ImageView>


        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/insertionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/green_medi"
            android:textStyle="bold"
            android:text="Votre medicament a ete insere avec succees.">

        </TextView>
        <TextView
            android:id="@+id/savePill"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Enregister"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/round_element">

        </TextView>

    </LinearLayout>
</layout>