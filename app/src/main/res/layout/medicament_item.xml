<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="Medicament"
            type="com.example.meditake.database.entities.Medicament" />
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rappel_card_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/icon_pill"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pill_icon">

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/icon_pill"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Abufene"
                android:textColor="@color/black">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prendre 20 pilules chaque ation et attendre votre tour"
               >

            </TextView>

        </LinearLayout>


    </RelativeLayout>
</layout>