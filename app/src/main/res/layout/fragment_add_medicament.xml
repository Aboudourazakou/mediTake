<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.AddMedicamentFragmentToRappel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/header_title"
            android:background="@color/main_blue"
            android:orientation="horizontal"
            android:gravity="center">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Liste des medicaments actifs"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                />


        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/actifMedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title">
">

        </androidx.recyclerview.widget.RecyclerView>

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/addMedicament"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_above="@+id/actifMedRecyclerView"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center"
            android:background="@drawable/round_element"
            android:text="Ajouter rappel" />

    </RelativeLayout>
</layout>